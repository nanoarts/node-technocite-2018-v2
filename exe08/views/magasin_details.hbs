<div class="single">

    <div class="single__hero">
        <h2 class="title title--single">
            {{caps magasin.name}}
        </h2>
        <img src="/uploads/{{magasin.photo}}" alt="{{magasin.description}}">

    </div>

    <div class="single__details inner">
        <p class="single__location">
            {{magasin.description}}
        </p>
    </div>

    <div class="single__map">

         <img src="{{staticMap magasin.location.coordinates}}" alt="" class="maps"> 

    </div>

    <div class="single__details inner">
        <a href="/magasins/{{magasin.id}}/edit" class="button_edit">
            EDIT
        </a>
    </div>


</div>